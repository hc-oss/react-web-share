    {
      "path": "dist/react-multi-select-component.esm.js",
      "limit": "10 KB"
    }
  ],
  "keywords": [
    "react",
    "share",
    "web-share",
    "native",
    "fallback",
    "polyfill",
    "component",
    "tiny",
    "lightweight"
